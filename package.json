{
    "name": "@lightningip/lib-nbn",
    "repository": "https://github.com/LightningIP/lib-nbn.git",
    "version": "2.0.0",
    "description": "Library of NBN interfaces",
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "author": "",
    "license": "MIT",
    "files": [
        "/lib"
    ],
    "scripts": {
        "build": "tsup",
        "watch": "tsup --watch",
        "build2": "npm run clean && npm run build:cjs",
        "build:cjs": "tsc --build",
        "clean": "tsc --build --clean",
        "watch2": "tsc --watch",
        "updates": "npx npm-check-updates",
        "test": "npx node-ts test/index.ts"
    },
    "dependencies": {
        "@mikro-orm/core": "^6.4.2",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/node": "^22.10.2",
        "tsup": "^8.3.6",
        "node-ts": "^6.1.3",
        "typescript": "^5.6.3"
    }
}
