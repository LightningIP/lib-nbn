{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "lib": ["ES2017"],
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@common/*": ["./common/*"],
      "@address-detail": ["./address-detail/index.ts"],
      "@address-detail/*": ["./address-detail/*"],
      "@location": ["./location/index.ts"],
      "@location/*": ["./location/*"],
      "@service-qualification": ["./service-qualification/index.ts"],
      "@service-qualification/*": ["./service-qualification/*"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "/dist",
    "/node_modules",
    "/src/@custom_types/*"
  ]
}
